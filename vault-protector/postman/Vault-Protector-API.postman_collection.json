              "raw": "{\n  \"currentAuthVerifier\": \"currentPasswordDerivedVerifier==\",\n  \"newAuthVerifier\": \"newPasswordDerivedVerifier==\",\n  \"newWrappedVaultKey\": \"vaultKeyWrappedWithNewMasterKey==\",\n  \"newKdf\": {\n    \"algorithm\": \"argon2id\",\n    \"salt\": \"newRandomSalt==\",\n    \"memory\": 65536,\n    \"iterations\": 3,\n    \"parallelism\": 4\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/change-password",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "change-password"]
            },
            "description": "Change password. Requires current and new auth verifiers, plus re-wrapped vault key."
          },
          "response": []
        }
